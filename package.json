{
  "name": "yolo-trainer",
  "version": "1.4.1",
  "description": "Interactive YOLO Model Trainer with Reddit Integration",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder",
    "dist:publish": "electron-builder --publish=always"
  },
  "keywords": [
    "yolo",
    "training",
    "annotation",
    "reddit"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/F3T1W/YoloTrainer.git"
  },
  "build": {
    "appId": "com.yolo.trainer",
    "productName": "YOLO Trainer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "python/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "python",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "F3T1W",
      "repo": "YoloTrainer",
      "private": false,
      "releaseType": "release"
    }
  }
}
